<Window x:Class="Wpf_cafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" />
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="100,10,10,10" />
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,50,10,10" />
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="100,50,10,10" />
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="0,100,0,10" Click="LoginButton_Click" />
    </Grid>
</Window>
